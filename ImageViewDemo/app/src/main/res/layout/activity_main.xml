<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/rgImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/burger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/burger"
            android:tag="@drawable/burger" />

        <RadioButton
            android:id="@+id/frenchfry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frenchfry"
            android:tag="@drawable/frenchfry" />

        <RadioButton
            android:id="@+id/softdrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/softdrink"
            android:tag="@drawable/softdrink" />

        <RadioButton
            android:id="@+id/soup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/soup"
            android:tag="@drawable/soup" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="564dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgOutput1"
            android:layout_width="73dp"
            android:layout_height="90dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/burger" />

        <ImageView
            android:id="@+id/imgOutput2"
            android:layout_width="117dp"
            android:layout_height="84dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
             app:srcCompat="@drawable/frenchfry" />

        <ImageView
            android:id="@+id/imgOutput3"
            android:layout_width="113dp"
            android:layout_height="118dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/softdrink" />

        <ImageView
            android:id="@+id/imgOutput4"
            android:layout_width="115dp"
            android:layout_height="107dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/soup" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
